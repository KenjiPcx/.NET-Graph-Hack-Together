@inherits LayoutComponentBase

<PageTitle>BlazorSample</PageTitle>

<div class="h-screen">
    <Navbar />
    <main class="my-5 max-w-screen-md mx-auto">
        <AuthorizeView>
            <Authorized>
                <article class="h-full">
                    @Body
                </article>
            </Authorized>
            <NotAuthorized>
                <p>You need to Login to use this app</p>
                <a class="btn" href="MicrosoftIdentity/Account/SignIn">Log in</a>
            </NotAuthorized>
        </AuthorizeView>
    </main>
</div>
